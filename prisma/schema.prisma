generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filme {
  id         Int         @id @default(autoincrement())
  descricao  String?
  nome       String
  ano        Int
  imagem     String?
  link       String?
  Favoritado Interecao[]

  @@map("filme")
}

model Usuario {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String
  senha      String
  idade      Int
  Favoritado Interecao[]

  @@map("usuario")
}

model Interecao {
  id        Int      @id @default(autoincrement())
  idUsuario Int
  idFilme   Int
  tipo      String   @default("favorito") @db.VarChar(50)
  nota      Int
  data      DateTime @default(now())

  filme   Filme   @relation(fields: [idFilme], references: [id], onDelete: Cascade)
  usuario Usuario @relation(fields: [idUsuario], references: [id], onDelete: Cascade)

  @@map("favoritado")
}
